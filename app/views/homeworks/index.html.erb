<% if @homeworks.empty? %>

<br/>
No homework. Go to Disneyland.

<% else %>

<h1>Homework</h1>

<table>
  <tr>
    <th>Homework</th>
    <th>Due Date</th>
  </tr>

  <% @homeworks.each do |homework| %>
    <tr>
      <td> <%= link_to homework.title, homework %> </td>
      <td> <%= homework.due_date.strftime("%m/%d/%Y") %> </td>
    </tr>
  <% end %>

</table>

<% end %>